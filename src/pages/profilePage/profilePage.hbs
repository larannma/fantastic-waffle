<div class="app">
  <div class="profile__back profile__back-to-chats">
    <img class="profile__back-icon" src="/icons/arrow-right-circle-svgrepo-com.svg" />
  </div>
  <div class="profile__main">
    <div class="profile__main-container">
      <div class="profile__top-info">
        <div class="profile__top-info-image-wrapper">
          <img class="profile__top-info-image" src="/icons/gendalf_smile.jpg" alt="profile" />
        </div>
        <p>Anna</p>
      </div>

      <form class="profile__form">

        <div class="profile__form-field">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" value="pochta@yandex.ru" />
          <span class="edit-icon">✎</span>
        </div>

        <div class="profile__form-field">
          <label for="login">Login</label>
          <input type="text" id="login" name="login" value="ivanivanov" />
          <span class="edit-icon">✎</span>
        </div>

        <div class="profile__form-field">
          <label for="first_name">First Name</label>
          <input type="text" id="first_name" name="first_name" value="Ivan" />
          <span class="edit-icon">✎</span>
        </div>

        <div class="profile__form-field">
          <label for="second_name">Last Name</label>
          <input type="text" id="second_name" name="second_name" value="Ivanov" />
          <span class="edit-icon">✎</span>
        </div>

        <div class="profile__form-field">
          <label for="display_name">Display Name</label>
          <input type="text" id="display_name" name="display_name" value="Ivan" />
          <span class="edit-icon">✎</span>
        </div>

        <div class="profile__form-field">
          <label for="phone">Phone</label>
          <input type="tel" id="phone" name="phone" value="+7 (909) 967 30 30" />
          <span class="edit-icon">✎</span>
        </div>

        <div class="profile__form-field">
          <label for="avatar">Avatar</label>
          <div class="profile__file-upload">
            <label for="avatar" class="upload-btn">Upload Image</label>
            <span class="file-name" id="file-name">No file selected</span>
            <input type="file" id="avatar" name="avatar" accept="image/*" />
          </div>
        </div>

        <hr />

        <div class="profile__form-field">
          <label for="oldPassword">Old Password</label>
          <input type="password" id="oldPassword" name="oldPassword" />
        </div>

        <div class="profile__form-field">
          <label for="newPassword">New Password</label>
          <input type="password" id="newPassword" name="newPassword" />
        </div>

        <button type="button" class="profile__save-btn">Save</button>
      </form>
    </div>
  </div>
</div>
